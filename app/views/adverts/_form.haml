.row
	.large-6.medium-6.small-12.columns
		%fieldset
			%legend Informations générales
			= f.label "Choisissez un titre pour votre annonce", nil, class: 'required'
			= f.text_field :title, label: false
			
			= f.label "Quel type d'espace proposez-vous?", nil, class: 'required'
			= f.select :advert_type, options_for_select([["Box", 1], ["Cave", 2], ["Garage", 3], ["Grenier", 4]]), label: false
			
			= f.label "Décrivez votre espace en quelques lignes", nil, class: 'required'
			= f.text_area :description, rows: 6, label: false
			
			.row
				.large-6.medium-6.small-6.columns
					= f.label "Surface", nil, class: 'required'
					.row.collapse
						.small-9.large-10.columns
							= f.text_field :area, label: false
						.small-3.large-2.columns
							%span.postfix m²
				.large-6.medium-6.small-6.columns
					= f.label "Hauteur", nil, class: 'required'
					.row.collapse
						.small-9.large-10.columns
							= f.text_field :height, label: false
						.small-3.large-2.columns
							%span.postfix m

			= f.label "Prix par jour", nil, class: 'required'
			.row.collapse
				.small-9.large-10.columns
					= f.text_field :price, label: false
				.small-3.large-2.columns
					%span.postfix CHF

	.large-6.medium-6.small-12.columns
		%fieldset
			%legend Lieu de votre espace

			= f.label "Adresse", nil, class: 'required'
			= f.text_field :address, label: false
			
		%fieldset
			%legend Détails
			.row
				.large-12.medium-12.small-12.columns
					= f.label "Type d'accès", nil, class: 'required'
					= f.select :access_type, options_for_select([["Accès sur rendez-vous", 0], ["Accès permanent", 1]]), label: false
			
			.row
				.large-6.medium-6.small-6.columns
					= f.label "Eclairage"
					= f.select :light, options_for_select([["Non", false], ["Oui", true]]), label: false
				.large-6.medium-6.small-6.columns
					= f.label "Gardien"
					= f.select :concierge, options_for_select([["Non", false], ["Oui", true]]), label: false
			.row
				.large-6.medium-6.small-6.columns
					= f.label "Accès en voiture"
					= f.select :car_access, options_for_select([["Non", false], ["Oui", true]]), label: false
				.large-6.medium-6.small-6.columns
					= f.label "Ascenceur"
					= f.select :elevator, options_for_select([["Non", false], ["Oui", true]]), label: false

