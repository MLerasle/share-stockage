%section#main-content
	.row.body.sign-in
		.large-10.small-12.columns.large-centered.small-centered
			.create-account
				.row.sign-up
					.large-12.small-12.columns
						%h2 Création de votre annonce
						%hr
						
					.row
						.large-4.medium-4.small-4.columns
							.panel{ style: "background-color:white" }
								%h4{ style: "color:rgb(185, 185, 185)" }
									%i.fa.fa-info
									Informations générales
							.panel{ style: "background-color:white" }
								%h4{ style: "color:rgb(185, 185, 185)" }
									%i.fa.fa-map-marker
									Localisation
							.panel{ style: "background-color:white; border: 1px solid rgb(84, 151, 86)" }
								%h4{ style: "color:rgb(84, 151, 86)" }
									%i.fa.fa-edit
									Description
							.panel{ style: "background-color:white" }
								%h4{ style: "color:rgb(185, 185, 185)" }
									%i.fa.fa-euro
									Prix
							.panel{ style: "background-color:white" }
								%h4{ style: "color:rgb(185, 185, 185)" }
									%i.fa.fa-file-image-o
									Photos

						.large-8.medium-8.small-8.columns
							%h4 Description de votre espace
							%br
							= form_for @advert, url: wizard_path, method: :put do |f|
								%fieldset
									%legend Description générale

									= f.label "Décrivez votre espace en quelques lignes", nil, class: 'required'
									= f.text_area :description, rows: 6, label: false

								%fieldset
									%legend Détails
									.row
										.large-12.medium-12.small-12.columns
											= f.label "Type d'accès", nil, class: 'required'
											= f.select :access_type, options_for_select([["Accès sur rendez-vous", 0], ["Accès permanent", 1]]), label: false
			
									.row
										.large-6.medium-6.small-6.columns
											= f.label "Eclairage"
											= f.select :light, options_for_select([["Non", false], ["Oui", true]]), label: false
										.large-6.medium-6.small-6.columns
											= f.label "Gardien"
											= f.select :concierge, options_for_select([["Non", false], ["Oui", true]]), label: false
									.row
										.large-6.medium-6.small-6.columns
											= f.label "Accès en voiture"
											= f.select :car_access, options_for_select([["Non", false], ["Oui", true]]), label: false
										.large-6.medium-6.small-6.columns
											= f.label "Ascenceur"
											= f.select :elevator, options_for_select([["Non", false], ["Oui", true]]), label: false
									%br
									= f.submit "Continuer", class: "button right"