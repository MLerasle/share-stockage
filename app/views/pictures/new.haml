- content_for(:title, 'Photos')
%section#main-content
	.row
		- unless notice.nil?
			.alert-box.info.radius{ "data-alert" => "" }
				= notice
				%a.close{ href:"#" } x

	.row.body.sign-in
		.large-10.medium-12.small-12.columns.large-centered.small-centered
			.create-account
				.row.sign-up
					.large-12.small-12.columns
						%h2 À propos de votre espace
						%hr

				.row.sign-up
					.row
						.large-4.medium-4.hide-for-small.columns
							- if @advert.validated
								= link_to advert_step_path(@advert, Advert.form_steps[0]), class: "wizard_link" do
									.panel{ style: "background-color:white" }
										%h4{ style: "color:rgb(185, 185, 185)" }
											%i.fa.fa-info
											Informations générales
								= link_to advert_step_path(@advert, Advert.form_steps[1]), method: :get, class: "wizard_link" do
									.panel{ style: "background-color:white" }
										%h4{ style: "color:rgb(185, 185, 185)" }
											%i.fa.fa-map-marker
											Localisation
								= link_to advert_step_path(@advert, Advert.form_steps[2]), class: "wizard_link" do
									.panel{ style: "background-color:white" }
										%h4{ style: "color:rgb(185, 185, 185)" }									
											%i.fa.fa-edit
											Description
								= link_to advert_step_path(@advert, Advert.form_steps[3]), class: "wizard_link" do
									.panel{ style: "background-color:white" }
										%h4{ style: "color:rgb(185, 185, 185)" }
											%i.fa.fa-euro
											Prix
								= link_to new_advert_picture_path(@advert), class: "wizard_link" do
									.panel{ style: "background-color:white; border: 1px solid rgb(84, 151, 86)" }
										%h4{ style: "color:rgb(84, 151, 86)" }
											%i.fa.fa-file-image-o
											Photos
								= link_to "Retour à mon compte", owner_space_users_path, class: "button radius expand"
							- else
								.panel{ style: "background-color:white" }
									%h4{ style: "color:rgb(185, 185, 185)" }
										%i.fa.fa-info
										Informations générales
								.panel{ style: "background-color:white" }
									%h4{ style: "color:rgb(185, 185, 185)" }
										%i.fa.fa-map-marker
										Localisation
								.panel{ style: "background-color:white" }
									%h4{ style: "color:rgb(185, 185, 185)" }
										%i.fa.fa-edit
										Description
								.panel{ style: "background-color:white" }
									%h4{ style: "color:rgb(185, 185, 185)" }
										%i.fa.fa-euro
										Prix
								.panel{ style: "background-color:white; border: 1px solid rgb(84, 151, 86)" }
									%h4{ style: "color:rgb(84, 151, 86)" }
										%i.fa.fa-file-image-o
										Photos

						.large-8.medium-8.small-12.columns
							%h4 Ajouter des photos à votre annonce
							%hr
							.row
								.small-12.large-12.columns
									%h6
										Vous pouvez ajouter 3 photos au plus sur votre annonce.
										%br
										La taille maximale pour une photo est de 3 Mo.
							#picture_advert{advert_id: @advert.id, data_present: @advert.pictures.count > 0 ? 1 : 0}
								= form_for @picture, url: advert_pictures_path(@advert), html: { multipart: true, class: "dropzone", id: "new-picture" } do |f|
									.fallback
										= f.file_field :image
										= f.submit "Ajouter"
					
							%hr
							= link_to "Précédent", advert_step_path(@advert, Advert.form_steps.last), class: "button small"
							= link_to "Valider", advert_path(@advert), class: "button right small", method: :get