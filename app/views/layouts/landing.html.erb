				</div>
			<% end %>
			<% unless alert.nil? %>
				<div data-alert class="alert-box alert radius">
					<%= alert %>
					<a href="#" class="close">&times;</a>
				</div>
			<% end %>
		</div> -->

    <%= yield %>
		
		
		<!-- FOOTER SECTION -->
		
    <%= javascript_include_tag "application" %>
		<%= yield :scripts %>
		<%= render 'layouts/footer' %>
  </body>
</html>